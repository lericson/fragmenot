#!/usr/bin/make -f 

python ?= python3
var  ?= var
pat  := $(var)/runs_*/run_*
runs := $(wildcard $(pat))

MAKEFLAGS += --keep-going

PARAME_VERBOSE ?= false
export

$(info Pattern $(pat) matches $(words $(runs)) runs)

%/.plot_cache.npz: %/environ.yaml %/mesh.npz
	$(python) ./scripts/precompute_plot_cache.py $(@D) 

all: $(runs:%=%/.plot_cache.npz)
	@echo done

.PHONY: all
.DEFAULT: all
